[global/wm]
enable-ipc = true

[colors]
fg = #e0e0e0
;bg = #84000000
bg = #00000000
;bg = #f5262626

[bar/top]

;monitor = HDMI-2
;monitor-fallback = eDP-1
;monitor-strict = true
;
monitor = eDP-1
monitor-strict = true

width = 100%
height = 35
offset-x = 0%
offset-y= 0%
fixed-center = true
override-redirect = false

background = ${colors.bg}
foreground = ${colors.fg}

font-0 = DejaVu:size=9:weight=bold;1
font-1 = FontAwesome:size=7;1

modules-left = date time volume battery wireless-network
modules-center = ewmh
modules-right = xwindow cust_mini cust_toggle cust_kill

;tray-position = false
;tray-padding = 0
;tray-background = ${colors.bg}
;tray-detached = false

underline-size = 3

spacing = 2
padding-left = 5
padding-right = 5
module-margin-left = 2
module-margin-right = 2


[module/volume]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = vol %percentage%%
module-margin-right = 1

format-volume-background = ${colors.bg}
label-muted = muted


[module/xwindow]
type = internal/xwindow
label = %title:0:12:...%
module-margin-left = 2
format-padding = 2
format-background = ${colors.bg}

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = false
enable-scroll = true

format = <label-state>

label-active = ×
;label-active = -
;label-active-foreground = ${colors.fg}
;label-active-background = ${colors.bg}
label-active-padding = 1

label-empty = •
;label-empty = ▵
;label-empty-foreground = ${colors.fg}
;label-empty-background = ${colors.bg}
label-empty-padding = 1

;label-urgent = -
label-urgent = ×
;label-urgent-foreground = #EC5f67
;label-urgent-foreground = ${colors.fg}
;label-urgent-background = ${colors.bg}
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 1
date = %a %d %b 

[module/time]
type = internal/date
interval = 1
date = %I:%M 

[module/battery]
type = internal/battery
full-at = 100
battery = BAT0
adapter = ACAD
poll-interval = 5

format-charging = <label-charging>
format-discharging = <label-discharging>
label-charging = bat %percentage%%
label-discharging = bat %percentage%%
label-full = bat %percentage%%

[module/wired-network]
type = internal/network
interface = eth1
format-connected = •
format-disconnected =

[module/wireless-network]
type = internal/network
interface = wlp1s0
format-connected = •
format-disconnected =

[module/cust_mini]
type = custom/text
content = 
content-padding = 0
click-left = ~/.scripts/win_mini

[module/cust_toggle]
type = custom/text
content = 
content-padding = 0
click-left = ~/.scripts/win_toggle

[module/cust_kill]
type = custom/text
content = 
content-padding = 0
click-left = ~/.scripts/win_kill

[module/power-menu]
type = custom/text
content = 
content-padding = 0
click-left = ~/.scripts/d2_script/d2_power

; vim:ft=dosini
